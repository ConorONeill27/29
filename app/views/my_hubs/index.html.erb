  <style>
    /* GLOBAL STYLES */
    * {
      margin: 0; 
      padding: 0; 
      box-sizing: border-box;
    }
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #0c0f17, #000);
      color: #fff;
      display: flex;
      min-height: 100vh;
    }

    /* SIDEBAR */
    .sidebar {
      width: 250px;
      background-color: #14161c; /* Slightly lighter than the gradient */
      padding: 1rem;
      overflow-y: auto;
    }
    .sidebar h2 {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }
    .categories {
      list-style: none;
    }
    .categories li {
      margin-bottom: 0.75rem;
    }
    .categories a {
      text-decoration: none;
      color: #aaa;
      font-weight: 500;
      transition: color 0.2s ease;
    }
    .categories a:hover {
      color: #fff;
    }

    /* MAIN CONTENT */
    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 1rem 2rem;
    }

    /* HEADER + SEARCH */
    .top-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.5rem;
    }
    .top-bar h1 {
      font-size: 1.8rem;
    }
    .search-bar {
      position: relative;
      width: 240px;
    }
    .search-bar input {
      width: 100%;
      padding: 0.5rem 2.5rem 0.5rem 0.75rem;
      border: 1px solid #444;
      border-radius: 6px;
      background-color: #1a1f2a;
      color: #fff;
      outline: none;
    }
    /* Optional search icon placeholder */
    .search-bar::before {
      content: "üîç";
      position: absolute;
      right: 0.75rem;
      top: 50%;
      transform: translateY(-50%);
      color: #aaa;
      pointer-events: none;
    }

    /* GRID OF BOXES */
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 1rem;
    }
    .card {
      background-color: #1a1f2a;
      border-radius: 8px;
      padding: 1rem;
      text-decoration: none;
      color: #fff;
      transition: background-color 0.3s ease, transform 0.2s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .card:hover {
      background-color: #2a2f3a;
      transform: translateY(-2px);
    }
    .card-icon {
      font-size: 2rem; /* Placeholder icon size */
      margin-bottom: 0.75rem;
    }
    .card-title {
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    .card-desc {
      font-size: 0.9rem;
      color: #ccc;
      line-height: 1.4;
    }
  </style>
