  <style>
    /* GLOBAL STYLES */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    html, body {
      height: 100%;
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #0c0f17, #000);
      color: #fff;
      position: relative;
    }
    body {
      display: flex;
      flex-direction: column;
    }
    /* FIXED TOP NAVIGATION BAR */
    .top-nav {
      width: 100%;
      background-color: #14161c;
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #444;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 10;
    }
    .top-nav .logo {
      font-size: 1.5rem;
      font-weight: 700;
      color: #fff;
    }
    .top-nav .nav-links a {
      margin-right: 1rem;
      text-decoration: none;
      color: #ccc;
      font-weight: 500;
      transition: color 0.2s ease;
    }
    .top-nav .nav-links a:hover {
      color: #fff;
    }
    .top-nav .demo-btn {
      text-decoration: none;
      padding: 0.5rem 1rem;
      border: 2px solid #5865f2;
      border-radius: 6px;
      color: #fff;
      font-weight: 500;
      transition: background-color 0.3s ease;
    }
    .top-nav .demo-btn:hover {
      background-color: #5865f2;
    }
    /* CONTENT BELOW TOP NAV */
    .content {
      display: flex;
      flex: 1;
      margin-top: 80px; /* Space for fixed nav */
    }
    /* SIDEBAR */
    .sidebar {
      width: 250px;
      background-color: #14161c;
      padding: 1rem;
      overflow-y: auto;
    }
    .sidebar h2 {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }
    .sidebar ul {
      list-style: none;
    }
    .sidebar ul li {
      margin-bottom: 0.75rem;
    }
    .sidebar a {
      text-decoration: none;
      color: #aaa;
      font-weight: 500;
      transition: color 0.2s ease;
    }
    .sidebar a:hover {
      color: #fff;
    }
    /* MAIN CONTENT AREA */
    .main-content {
      flex: 1;
      padding: 1rem 2rem;
      position: relative;
      overflow-y: auto;
    }
    /* STARFIELD BACKGROUND (non-uniform, subtle, distant stars) */
    .main-content::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 2px;
      height: 2px;
      background: rgba(255,255,255,0.15);
      /* Simulate a random starfield using box-shadow.
         You can add or adjust coordinates for more stars. */
      box-shadow:
        30px 50px,
        90px 120px,
        150px 80px,
        210px 200px,
        275px 65px,
        330px 140px,
        390px 100px,
        450px 220px,
        512px 40px,
        570px 180px,
        630px 130px,
        690px 90px,
        750px 210px,
        812px 70px,
        870px 160px,
        935px 45px,
        1000px 170px,
        1075px 95px,
        1130px 220px,
        1190px 130px,
        1250px 80px,
        1310px 190px;
      z-index: 1;
    }
    /* GRID OF CLICKABLE CARDS */
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 1rem;
      margin-top: 1rem;
      position: relative;
      z-index: 2; /* Above the starfield */
    }
    .card {
      background-color: #1a1f2a;
      border-radius: 8px;
      padding: 1rem;
      text-decoration: none;
      color: #fff;
      transition: background-color 0.3s ease, transform 0.2s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .card:hover {
      background-color: #2a2f3a;
      transform: translateY(-2px);
    }
    .card-icon {
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }
    .card-title {
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    .card-desc {
      font-size: 0.9rem;
      color: #ccc;
      line-height: 1.4;
    }
  </style>
</head>
