    .nav-links a:hover { color: #fff; }
    .demo-btn { text-decoration: none; padding: 0.6rem 1.2rem; border: 2px solid #5865f2; border-radius: 6px; color: #fff; font-weight: 500; transition: background-color 0.3s ease; }
    .demo-btn:hover { background-color: #5865f2; }

    /* HERO SECTION */
    #homepage-hero { margin-top: 80px; display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center; min-height: calc(100vh - 80px); }
    #homepage-hero h1 { font-size: 3rem; font-weight: 700; margin-bottom: 1rem; }
    #homepage-hero p { max-width: 600px; margin-bottom: 2rem; color: #ccc; }
    .hero-buttons { display: flex; gap: 1rem; justify-content: center; }
    .btn { background-color: #fff; color: #000; padding: 0.8rem 1.5rem; border-radius: 6px; text-decoration: none; transition: background-color 0.3s ease; }
    .btn:hover { background-color: #ccc; }
  </style>
