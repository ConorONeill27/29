<div class="centered-container">
  <div class="organizations-container">
    <h2>📂 Your Organizations</h2>

    <% if @organizations.empty? %>
      <p class="empty-message">You are not a member of any organizations yet.</p>
    <% else %>
      <table class="organization-table">
        <thead>
          <tr>
            <th>Organization Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @organizations.each do |organization| %>
            <tr>
              <td>
                <%= link_to organization.name, organization_path(organization), class: "organization-link", data: { turbo: false } %>
              </td>
              <td class="actions">
                <%= link_to "✏️ Edit", edit_organization_path(organization), class: "edit-btn", data: { turbo: false } %>
                <%= link_to "🗑 Delete", organization_path(organization), method: :delete, class: "delete-btn", data: { turbo_confirm: "Are you sure?", turbo: false } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <div class="create-org">
      <%= link_to "+ Create New Organization", new_organization_path, class: "create-btn", data: { turbo: false } %>
    </div>
  </div>
</div>

