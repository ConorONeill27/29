<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>New Note - Bundles</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Google Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">

  <!-- SimpleMDE (Markdown Editor) CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #0c0f17, #000);
      color: #fff;
      padding: 20px;
      height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .header h1 {
      font-size: 2rem;
      font-weight: 700;
    }

    .btn {
      text-decoration: none;
      padding: 0.6rem 1.5rem;
      border-radius: 6px;
      font-weight: 600;
      border: 2px solid #5865f2;
      color: #fff;
      background-color: transparent;
      transition: background-color 0.3s ease;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #5865f2;
    }

    /* Editor Container */
    .editor-container {
      flex: 1;
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .header h1 { font-size: 1.5rem; }
    }
  </style>
</head>
<body>

  <!-- HEADER -->
  <div class="header">
    <h1>üìù New Note Editor</h1>
    <div>
      <a href="/" class="btn">‚Üê Back to My Hub</a>
      <button id="save-btn" class="btn">üíæ Save Note</button>
    </div>
  </div>

  <!-- MARKDOWN EDITOR AREA -->
  <div class="editor-container">
    <textarea id="markdown-editor"></textarea>
  </div>

  <!-- SimpleMDE (Markdown Editor) JS -->
  <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

  <!-- FILE SAVING LOGIC -->
  <script>
    // Initialize the Markdown Editor
    const simplemde = new SimpleMDE({
      element: document.getElementById("markdown-editor"),
      placeholder: "Start typing your Markdown note here...",
      spellChecker: false,
      autosave: {
        enabled: true,
        uniqueId: "markdown-note",
        delay: 1000,
      },
      previewRender: function(plainText) {
        return SimpleMDE.prototype.markdown(plainText); // Live preview
      },
    });

    // Function to download Markdown content as a .md file
    document.getElementById("save-btn").addEventListener("click", function() {
      const content = simplemde.value();
      const filename = prompt("Save as (include .md at end):", "new_note.md") || "note.md";

      const blob = new Blob([content], { type: "text/markdown;charset=utf-8;" });
      const link = document.createElement("a");
      link.href = URL.createObjectURL(blob);
      link.download = filename;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      URL.revokeObjectURL(link.href);
    });
  </script>

</body>
</html>
